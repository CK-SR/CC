# FastAPI / Camera Check service environment template
# FastAPI / 摄像头巡检服务环境变量示例

# Redis connection settings
# Redis 连接配置
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_DECODE_RESPONSES=1

# MinIO connection information
# MinIO 连接信息
MINIO_ENDPOINT=127.0.0.1:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=camera-checkout
MINIO_SECURE=0

# Optional behaviour tweaks
# 可选行为调整
MINIO_SAVE_MODE=all
MINIO_SAMPLE_FPS=1
MINIO_JPEG_QUALITY=85
MINIO_MAX_FRAMES_PER_STREAM=1000
MINIO_TRIM_INTERVAL=1000
MINIO_USE_INTRUSSION_SUFFIX=1

# Development helpers
# 开发辅助配置
ENABLE_TEST_VIDEO=0
TEST_VIDEO_FPS=20
TEST_VIDEO_DIR=./test_videos
